#include<stdio.h>
int lcm(n1,n2);
int main()
{   int n1,n2;

    printf("enter num1::");
    scanf("%d",&n1);
    printf("enter num2::");
    scanf("%d",&n2);
    
    lcm(n1,n2);
}

int lcm(n1,n2)
{
    for(int i=1;i<=n1*n2;i++)
    {
        if(i%n1==0&&i%n2==0){
            printf("the l.c.m of number %d and number %d is:::%d",n1,n2,i);
                                    break;
        }
    }
}
