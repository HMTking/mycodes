#include<stdio.h>
int main()
{int a;
printf("enter your number");
scanf("%d",&a);
if(a>0){printf("this number is positive\n");
    if(a%2==0){printf("it is even number");}
    else{printf("it is odd number");}
}
else{printf("it is negative");
    if(a%2==0){printf("it is even number\n");}
    else{printf(" .it is odd number");}
}
return 0;
}
